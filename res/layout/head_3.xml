<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"

        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="302"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/head3_01" />

        <ImageView
            android:id="@+id/menu_btn1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="219"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/head3_02" />

        <ImageView
            android:id="@+id/menu_btn2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="218"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/head3_03" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="221"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_btn3"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="43"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/head3_04" />

            <ImageView
                android:id="@+id/menu_btn4"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="58"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/head3_05" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>